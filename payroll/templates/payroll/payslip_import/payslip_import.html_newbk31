</div>

<script>
  $(document).ready(function () {
    var modalDialog = $("#objectDetailsModal .oh-modal__dialog");
    if (modalDialog.length) {
      modalDialog.css("max-width", "90%");
      modalDialog.css("width", "1200px");
    }
  });

  let selectedMonth = parseInt("{{ current_month|default:0 }}") || 0;
  let selectedYear = parseInt("{{ current_year|default:0 }}") || 0;
  let selectedFile = null;

  const monthNames = [
    "January",
    "February",
    "March",
    "April",
    "May",
    "June",
    "July",
    "August",
    "September",
    "October",
    "November",
    "December",
  ];

  function updateSelectedPeriodDisplay() {
    const display = document.getElementById("selectedPeriodDisplay");
    if (display && selectedMonth > 0 && selectedMonth <= 12) {
      display.textContent = `${monthNames[selectedMonth - 1]} ${selectedYear}`;
    }
  }

  updateSelectedPeriodDisplay();

  function changeYear(delta) {
    selectedYear += delta;
    const yearDisplay = document.getElementById("yearDisplay");
    if (yearDisplay) {
      yearDisplay.textContent = selectedYear;
    }
    updateSelectedPeriodDisplay();

    // Reload page with new year to regenerate months_data
    const url = `{% url 'payslip-info-import' %}?year=${selectedYear}`;
    window.location.href = url;
  }

  function selectMonth(btn) {
    // Remove selected class from all month buttons
    document
      .querySelectorAll(".month-btn")
      .forEach((b) => b.classList.remove("selected"));

    // Add selected class to clicked button
    btn.classList.add("selected");

    // Update selected month (month_num is 1-12)
    selectedMonth = parseInt(btn.dataset.month);

    // Update display
    updateSelectedPeriodDisplay();

    // Close the dropdown after selection
    setTimeout(() => {
      const dropdownBtn = document.getElementById("calendarToggle");
      const calendarPopup = document.getElementById("calendarPopup");
      if (dropdownBtn && calendarPopup) {
        dropdownBtn.classList.remove("open");
        calendarPopup.classList.remove("open");
        calendarPopup.style.display = "none";
      }
    }, 200);

    const templates = document.getElementById("card1");
    const ftitle = document.getElementById("ftitle");
    const fsubtitle = document.getElementById("fsubtitle");
    const fbutton = document.getElementById("fbutton");
    const total_employees = 1247;
    templates.style.borderColor = "#5E17EB";
    templates.style.boxShadow = "0 4px 12px rgba(122, 52, 171, 0.4)";
    ftitle.innerHTML = `Ready to process {{ employee_count|default:0 }} employees`
    fsubtitle.innerHTML = `You have selected ${monthNames[selectedMonth - 1]} ${selectedYear}`;



  }

  // Calendar dropdown toggle functionality - FIXED
  document.addEventListener("DOMContentLoaded", function () {
    const calendarToggle = document.getElementById("calendarToggle");
    const calendarPopup = document.getElementById("calendarPopup");

    if (calendarToggle && calendarPopup) {
      // Click handler for dropdown button
      calendarToggle.addEventListener("click", function (e) {
        e.preventDefault();
        e.stopPropagation();

        // Toggle open state
        const isOpen = this.classList.toggle("open");
        calendarPopup.classList.toggle("open");

        // Force display
        if (isOpen) {
          calendarPopup.style.display = "block";
        } else {
          calendarPopup.style.display = "none";
        }
      });

      // Prevent dropdown from closing when clicking inside it
      calendarPopup.addEventListener("click", function (e) {
        e.stopPropagation();
      });
    }

    // Close dropdown when clicking outside
    document.addEventListener("click", function (e) {
      const dropdownWrapper = document.querySelector(".dropdown-wrapper");
      if (dropdownWrapper && !dropdownWrapper.contains(e.target)) {
        const dropdownBtn = document.getElementById("calendarToggle");
        const popup = document.getElementById("calendarPopup");

        if (dropdownBtn && popup) {
          dropdownBtn.classList.remove("open");
          popup.classList.remove("open");
          popup.style.display = "none";
        }
      }
    });
  });

  // Rest of your original script remains unchanged
  let timeout = null;
  function debounceUpdateYear(input) {
    const year = input.value;
    selectedYear = parseInt(year) || selectedYear;
    updateSelectedPeriodDisplay();
    if (year.length === 4 && year >= 2000 && year <= 2100) {
      clearTimeout(timeout);
      timeout = setTimeout(function () {
        window.location.href = `{% url 'payslip-info-import' %}?year=${year}`;
      }, 800);
    }
  }

  function toggleFiscalYear() {
    console.log("Toggle fiscal year");
  }

  function enableSubmit(input) {
    const btn = document.getElementById("submitBtn");
    if (input.files.length > 0) {
      selectedFile = input.files[0];
      btn.disabled = false;
      btn.classList.add("enabled");
    } else {
      selectedFile = null;
      btn.disabled = true;
      btn.classList.remove("enabled");
    }
  }

  function downloadTemplate(event) {
    event.preventDefault();
    fbutton.style.opacity = "1.0";
    const url = '{% url "payslip-import-template" %}';
    window.location.href = url;
  }

  function downloadPayslips(event) {
    event.preventDefault();
    if (!selectedMonth || !selectedYear) {
      showAlert("Please select a month and year first.", "error");
      return;
    }
    const url =
      '{% url "payslip-import-download" %}?month=' +
      selectedMonth +
      "&year=" +
      selectedYear;
    window.location.href = url;
  }

  function submitImport() {
    if (!selectedFile || !selectedMonth || !selectedYear) {
      showAlert("Please select a file, month, and year.", "error");
      return;
    }

    const formData = new FormData();
    formData.append("file", selectedFile);
    formData.append("month", selectedMonth);
    formData.append("year", selectedYear);
    formData.append("csrfmiddlewaretoken", "{{ csrf_token }}");

    const submitBtn = document.getElementById("submitBtn");
    submitBtn.disabled = true;
    submitBtn.textContent = "Processing...";

    fetch('{% url "payslip-import-process" %}', {
      method: "POST",
      body: formData,
      headers: { "X-CSRFToken": "{{ csrf_token }}" },
      redirect: 'follow' // Follow redirects
    })
      .then((response) => response.json())
      .then((data) => {
        if (data.status === "success") {
          showAlert(data.message, "success");
          // setTimeout(() => window.location.reload(), 2000);
          submitBtn.disabled = true;
          submitBtn.textContent = "Submit";
          submitBtn.style.display = "none";
        } else {
          showAlert(data.message, "error");
          submitBtn.disabled = false;
          submitBtn.textContent = "Submit";
        }
      })
      .catch((error) => {
        console.error("Error:", error);
        showAlert("An error occurred while processing the file.", "error");
        submitBtn.disabled = false;
        submitBtn.textContent = "Submit";
      });
    const card3 = document.getElementById("card3");
    card2.style.borderColor = "#6b728033";
    card3.scrollIntoView({ behavior: "smooth" });
    card3.style.borderColor = "#5E17EB";
    card3.style.boxShadow = "0 4px 12px rgba(122, 52, 171, 0.4)";
  }

  function showAlert(message, type) {
    const container = document.getElementById("alertContainer");
    const div = document.createElement("div");
    div.className = `oh-alert oh-alert--animated oh-alert--${type === "success" ? "success" : "danger"}`;
    div.textContent = message;
    container.innerHTML = "";
    container.appendChild(div);
    setTimeout(() => div.remove(), 5000);
  }
  function proceedToUpload() {
    const card2 = document.getElementById("card2");
    card1.style.borderColor = "#6b728033";
    card2.scrollIntoView({ behavior: "smooth" });
    card2.style.borderColor = "#5E17EB";
    card2.style.boxShadow = "0 4px 12px rgba(122, 52, 171, 0.4)";
  }
  function browseFiles() {
    fbutton.style.display = "none";
    submitBtn.style.display = "inline-block";
  }
</script>

