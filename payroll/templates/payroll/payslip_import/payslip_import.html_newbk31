    <!-- //---this is an last div----------------// -->
    <div class="fixed-footer">
      <div class="footer-left">
        <span class="info-icon">‚ÑπÔ∏è</span>
        <div class="footer-text">
          <div class="footer-title" id="ftitle">Select a payroll period to continue</div>
          <div class="footer-subtitle" id="fsubtitle">
            Choose month from the calendar above
          </div>
        </div>
      </div>

      <div class="footer-right">
        <!-- <button class="btn-secondary">Back to Contracts</button> -->
        <button class="submit-btn" id="submitBtn" disabled onclick="submitImport()"
          style="display:none;">Submit</button>
        <button class="btn-primary" id="fbutton" onclick="proceedToUpload()">Proceed to Upload ‚Üí</button>
      </div>
    </div>
