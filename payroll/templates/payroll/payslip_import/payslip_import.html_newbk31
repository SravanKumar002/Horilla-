          <!-- Detailed --------------->
          <div class="template-item" id="card2">
            <div class="template-content">
              <div class="template-info">
                <div class="template-name-row upload-header">
                  <h3 class="template-name">Upload Payroll File</h3>
                  <span class="upload-max">Max 50MB</span>
                </div>

                <!-- Upload UI -->
                <label class="upload-dropzone" for="fileInput">
                  <div class="upload-icon">‚¨ÜÔ∏è</div>

                  <p class="upload-title">Drag and drop your file here</p>
                  <p class="upload-subtitle">
                    or click to browse from your computer
                  </p>

                  <span class="browse-btn" onclick="browseFiles()">üìÅ Browse Files</span>

                  <!-- ‚ùó ID NOT REMOVED -->
